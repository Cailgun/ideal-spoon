<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/logoScreenBackground"
    tools:context="cn.edu.cugb.information_program.go_test.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#0f0f0f"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart= "true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="一路同行"
            android:textColor="#fff"
            android:textSize="24dp" />

        <Button
            android:id="@+id/button_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#0f0f0f"
            android:text="简介"
            android:textColor="#fff"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button_menu"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="#0f0f0f"
            android:text="菜单"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/button_matching"
        android:layout_height="wrap_content"
        android:layout_width="140dp"
        android:text="匹配行程"
        android:background="@drawable/btn_grv"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/cb_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:checked="false"
        android:duplicateParentState="false"
        android:text="行程对他人可见"
        android:textColor="#666666"
        android:textSize="15sp"
        app:buttonTint="@color/head_color"
        android:layout_below="@+id/editText7"
        android:layout_alignRight="@+id/editText7"
        android:layout_alignEnd="@+id/editText7" />

    <RelativeLayout
        android:id="@+id/rl_line3"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/viewPwd1"
        android:background="@color/logoScreenBackground">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/viewPwd1"
            android:layout_marginLeft="63dp"
            android:layout_marginStart="63dp"
            android:layout_marginTop="10dp"
            android:text="出发地"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="62dp"
            android:layout_marginRight="62dp"
            android:text="目的地"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="65dp"
            android:text=" 车次 "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/editText2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/editText2"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/btn_white"
            android:gravity="center_vertical"
            android:hint="您的目的地"

            android:textColorHint="@color/colorCursor"
            android:textSize="20dp" />

        <View
            android:id="@+id/viewPwd2"
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:layout_above="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp"
            android:background="#cccccc" />

        <View
            android:id="@+id/viewPwd3"
            android:layout_width="0.05dp"
            android:layout_height="40dp"
            android:layout_below="@+id/viewPwd2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:text=" 日期 "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/editText5"
            android:layout_alignBottom="@+id/editText5"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2"
            android:background="@drawable/btn_white"

            android:gravity="center_vertical"
            android:hint="您的车次号"
            android:textColorHint="@color/colorCursor"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editText3"
            android:layout_alignRight="@+id/editText3"
            android:layout_below="@+id/textView6"
            android:text="日"
            android:textColor="@color/colorCursor"
            android:textSize="25dp"
            android:layout_alignBottom="@+id/viewPwd3"
            android:layout_toRightOf="@+id/editText6"
            android:layout_toEndOf="@+id/editText6" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:layout_below="@+id/textView6"
            android:layout_toEndOf="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:background="@drawable/btn_white"
            android:gravity="center_vertical"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:text="月"
            android:textColor="@color/colorCursor"
            android:textSize="25dp"
            android:layout_alignBottom="@+id/textView8" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/editText6"
            android:layout_toLeftOf="@+id/textView6"
            android:layout_toStartOf="@+id/textView6"
            android:background="@drawable/btn_white"
            android:gravity="center_vertical"
            android:textSize="20dp" />

        <View
            android:id="@+id/viewPwd4"
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#cccccc" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_above="@+id/viewPwd2"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:layout_toLeftOf="@+id/viewPwd3"
            android:layout_toStartOf="@+id/viewPwd3"
            android:background="@drawable/btn_white"
            android:gravity="center_vertical"
            android:hint="您的出发地"
            android:textColorHint="@color/colorCursor"
            android:textSize="20dp" />


    </RelativeLayout>

    <View
        android:id="@+id/viewPwd1"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="#ccffff"
        android:layout_below="@+id/iv_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:text="编辑您的行程"
        android:textSize="30dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/rl_top"
        android:layout_toRightOf="@+id/button_find"
        android:layout_toEndOf="@+id/button_find" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignLeft="@+id/button_find"
        android:layout_alignStart="@+id/button_find"
        android:layout_below="@+id/rl_line3"
        android:layout_marginTop="11dp"
        android:background="@drawable/btn_white"
        android:gravity="center"
        android:hint="分享您此时此刻的心情！"
        android:textColorHint="@color/colorCursor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发现行程"
        android:textSize="20dp"
        android:background="@drawable/btn_grv"
        android:gravity="center"
        android:id="@+id/button_find"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的行程"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/button_myline"
        android:background="@drawable/btn_grv"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"

        />


</RelativeLayout>